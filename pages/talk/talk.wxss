/* pages/talk/talk.wxss */

.input-container {
    margin: 5px 10px 5px 10px;
}

.input-area {
    background-color: white;
    border: 1px solid #0abab5; /* Bootstrap的表单控件边框颜色 */
    border-radius: 0.25rem;
    padding: 6px 12px;
    color: #0a8a85; /* Bootstrap的表单控件文本颜色 */
    font-size: 12px;
    height: 128px;
  }

  .error-state {
    border-color: red;
    color: red;
}


.divine {
    background-color: #0abab5;
    border: solid 1px #0abab5;
    border-radius: 10px;
    margin: 20px;
  }
  
  .turtle {
    overflow: hidden;
    width: 100px;
    height: 100px;
    border-radius: 10px;
    opacity: 0.9;
    background-color: white;
  }
  
  .divine-text {
    text-align: center;
    font-size: 16px;
    color: white;
    font-weight: bold;
    padding-bottom: 10px;
  }
  
  .divine:active {
    opacity: 0.5;
  }

  .disabled {
    opacity: 0.5;
  }

.model-explain {
    padding: 10px;
    font-size: 14px;
    color: #0a8a85;
  }
  
  .loading-img {
      width: 72px;
      height: 58px;
  }
  
  .loading-area {
      text-align: center;
      font-size: 12px;
      color: #0abab5;
  }
  
  .safety-tips {
      font-size: 10px;
      color: white;
      background-color: #0abab5;
      border-radius: 5px;
      padding: 2px 10px 2px 10px
  }

  .error-tips {
      background-color: red;
  }