/* pages/main.wxss */
.container {
    position: relative;
    width: 100%;
    height: 100%;
}

.button {
    display: block;
    width: calc(100% - 20px);
    height: 150px;
    border: none;
    margin: 10px 5px;
    border-radius: 10px;
}

.button:active {
    background-color: #ca2b07;
    /* 点击后的背景颜色 */
    opacity: 0.5;
    /* 点击后的透明度 */
}

.button-container {
    display: flex;
    align-items: center;
    /* 垂直居中 */
    border-radius: 10px;
    width: calc(100% - 20px);
    height: calc(100% - 20px);
    padding: 10px;
    color: white;
}

.button-img {
    height: 88px;
    width: 88px;
    margin: 10px;
}

.button-text-title {
    padding-right: 10px;
    padding-left: 10px;
    font-size: 24px;
}

.button-text-desc {
    padding-right: 10px;
    padding-left: 10px;
    font-size: 10px;
}

.banner {
    display: flex;
    align-items: center;
    /* 垂直居中 */
    width: 100%;
    height: 100%;
}

.banner-img {
    height: 88px;
    width: 88px;
    margin-left: 10px;
    margin-right: 10px;
}

.banner-text {
    padding-right: 10px;
    padding-left: 10px;
    font-size: 10px;
    color: #EB5C6E;
    font-family: 'Times New Roman', Times, serif;
}

.banner-big-text {
    font-size: 36px;
    font-weight: bold;
    margin-left: 20px;
}

.yiji-container {
    display: flex;
    flex-direction: column;
    width: 100%;
    font-size: 12px;
    margin-top: 0;
    margin-bottom: 10px;
}

.row-yiji {
    padding: 10px 10px 5px 20px;
}

.label-yiji {
    margin-right: 20px;
    padding: 2px;
    border-radius: 3px;
    color: white
}

.tiffany-bkg {
    background-color: #0abab5;
}

.pink-bkg {
    background-color: #EB5C6E;
}

@keyframes breathing {
    0%, 100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.1);
    }
  }
  
  /* 应用动画 */
  .breathing-infinate {
    animation: breathing 2s infinite;
  }

  /* 定义摇头晃脑的动画 */
@keyframes shake {
    0%, 100% {
      transform: rotate(0deg);
    }
    25% {
      transform: rotate(-1deg);
    }
    75% {
      transform: rotate(1deg);
    }
  }
  
  /* 应用动画 */
  .shake-infinate {
    animation: shake 0.5s infinite;
  }