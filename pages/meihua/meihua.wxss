/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.container {
  height: fit-content;
}

.scrollarea {
  flex: 1;
  overflow-y:scroll;
}

.goodbad {
  font-size: 64px;
  color: red;
  font-weight: bold;
}

.gua-pairs {
    display: flex;
    justify-content: space-between;
    width: 100%;
}

.gua-pair {
    padding-left: 10px;
    padding-right: 10px;
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    width: 100%;
}

.gua-area {
  font-size: 14px;
  font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  font-weight: bold;
  text-align: center;
}

.gua-area .gua {
  color:darkred;
}

.gua-area .manifest {
  color:darkgreen;
}

.gua-area-tips {
  font-size: 8px;
  color: gray;
}

.yao-area {
  margin: 12px;
  margin-left: 30px;
  margin-right: 30px;
  font-size: 12px;
  color: darkblue;
}

.yao-area .yaoi {
  border: 1px solid brown;
  margin: 5px;
  color: brown;
  font-size: 10px;
}

.gua-pic {
  display: flex; /* 使用flexbox布局 */
  flex-direction: column; /* 子元素竖直排列 */
  align-items: center; /* 垂直居中 */
}

.yao-pic {
  margin-top: 4px;
  width: 64px;
  height: 16px;
}

.model-explain {
  padding: 10px;
  font-size: 14px;
  color: rgb(218, 37, 97);
}

.loading-img {
    width: 150px;
    height: 150px;
}

.loading-area {
    text-align: center;
    font-size: 12px;
    color: rgb(218, 37, 97);
}

.safety-tips {
    font-size: 10px;
    color: white;
    background-color: darkred;
    border-radius: 5px;
    padding: 2px 10px 2px 10px
}