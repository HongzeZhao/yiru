/* pages/meihua-input/minput.wxss */
page {
    background-color: #EB5C6E;
}

.pull-area {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    height: 100%; /* 根据需要调整高度 */
    z-index: -1;
    background-color: #EB5C6E;
}

.container {
    padding: 20px;
}

/* 弹窗容器样式 */
.modal-container {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.5);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 999;
}

/* 弹窗内容区域 */
.modal-content {
    width: 80%;
    background-color: #FFFFFF;
    padding: 20px;
    border-radius: 10px;
    overflow: hidden;
}

/* 滚动视图 */
.modal-scroll-view {
    height: 60vh;
    /* 调整高度以适应内容 */
    overflow-y: scroll;
}

/* 按钮样式 */
.modal-button {
    margin-top: 20px;
    padding: 10px;
    background-color: #EB5C6E;
    color: white;
    text-align: center;
    border-radius: 5px;
    display: block;
    width: 100%;
    font-size: 14px;
}

.modal-button:active {
    opacity: 0.5;
}

.model-text-head {
    font-size: 14px;
    font-weight: bold;
}

.model-text {
    font-size: 12px;
    color: #888888;
}

.banner-container {
    display: flex;
    align-items: center;
    /* 垂直居中 */
    border-radius: 10px;
    width: calc(100% - 20px);
    height: calc(100% - 20px);
    padding: 10px;
    color: white;
}

.banner-img {
    height: 88px;
    width: 88px;
    margin: 10px;
}

.banner-text-title {
    padding-right: 10px;
    padding-left: 10px;
    font-size: 24px;
}

.banner-text-desc {
    padding-right: 10px;
    padding-left: 10px;
    font-size: 10px;
}