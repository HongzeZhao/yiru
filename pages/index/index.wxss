/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y:scroll;
}

.devine {
  overflow: hidden;
  width: 128px;
  height: 256px;
  scale: 50%;
  background: round no-repeat url("data:image/svg+xml;base64,");
}

.devine:active {
  scale: 60%;
}

.goodbad {
  font-size: 64px;
  color: red;
  font-weight: bold;
}

.gua-pairs {
    justify-content: space-evenly;
}

.gua-pair {
    padding-left: 10px;
    padding-right: 10px;
}

.gua-area {
  font-size: 20px;
  font-weight: bold;
  text-align: center;
}

.gua-area .gua {
  color:darkred;
}

.gua-area .manifest {
  color:darkgreen;
}

.yao-area {
  margin-top: 12px;
  margin-bottom: 12px;
  font-size: 12px;
  color: darkblue;
}

.yao-area .yaoi {
  border: 1px solid brown;
  margin: 5px;
  color: brown;
  font-size: 10px;
}

.gua-pic {
  display: flex; /* 使用flexbox布局 */
  flex-direction: column; /* 子元素竖直排列 */
  align-items: center; /* 垂直居中 */
}

.yao-pic {
  margin-top: 4px;
  width: 64px;
  height: 16px;
}

.mp-ext {
    background-color: aquamarine;
}